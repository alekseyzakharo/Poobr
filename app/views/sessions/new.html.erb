<h1><center>Log in</center></h1>

<div class="box">
  <div>
    <center>
    <%= form_for(:session, url: login_path) do |f| %>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
    <p><br></p>
    <div class="submit">
      <%= f.submit "Log in", class: "btn btn-primary" %>
    </div>
    <% end %>
  </center>

    <p><center>New user? <%= link_to "Sign up now!", signup_path %></center></p>
  </div>
</div>
